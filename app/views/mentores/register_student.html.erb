<h1>Registrar Novo Aluno</h1>

<%= form_with model: @user, url: mentores_create_student_path, local: true do |form| %>
  <div class="field">
    <%= form.label :nome_completo, 'Nome Completo' %>
    <div class="control">
      <%= form.text_field :nome_completo, class: 'input', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :username, 'Usuário' %>
    <div class="control">
      <%= form.text_field :username, class: 'input', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :password, 'Senha' %>
    <div class="control">
      <%= form.password_field :password, class: 'input', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :area, 'Área' %>
    <div class="control">
      <%= form.select :area, User.areas.keys.map { |area| [area.humanize, area] }, { prompt: 'Selecione uma área' }, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit 'Registrar Aluno', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
